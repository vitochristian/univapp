<!-- obj: @student means we use student obj in this part -->
<%= render 'shared/errors', obj: @student %>

<!-- put the form inside a container -->
<div class="container">
	<!-- make the form center and inside a table -->
	<div class="row center above">
		<!-- for mobility in each devices use s m l small medium and large -->
		<div class="col s12 m12 l12">
			<!-- add a card panel as border to the form -->
			<div class="card-panel">
				<!-- @student.new_record ... means if it's a new record use SIGN UP else EDIT PROFILE -->
				<h3> <%= (@student.new_record? ? "SIGN UP" : "EDIT PROFILE") %></h3>
				<div class="row">
				<%= form_for(@student, html: {class: "col s12"}) do |f| %>
					<div class="row">
				        <div class="input-field col s12">
							<%= f.text_field :name, placeholder: (@student.new_record? ? "Enter your name" : "Update your name"), autofocus:true %>
							<%= f.label :name, "Name" %>
						</div>
					</div>
					<div class="row">
				        <div class="input-field col s12">
							<%= f.email_field :email, placeholder: (@student.new_record? ? "Enter your email address" : "Update your email address") %>
							<%= f.label :email, "Email" %>
						</div>
					</div>
					<div class="btn-flat teal accent-4 waves-effect waves-light">
						<%= f.submit (@student.new_record? ? "SIGN UP" : "EDIT"), :disable_with => (@student.new_record? ? "Submitting..." : 'Editing...') %>
						<i class="material-icons right">edit</i>
					</div>
				<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

