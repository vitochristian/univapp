<!-- obj: @student means we use student obj in this part -->
<%= render 'shared/errors', obj: @student %>

<!-- put the form inside a container -->
<div class="container">
	<!-- make the form center and inside a table -->
	<div class="row center above">
		<!-- for mobility in each devices use s m l small medium and large -->
		<div class="col s12 m12 l12">
			<!-- add a card panel as border to the form -->
			<div class="card-panel">
				<!-- @student.new_record ... means if it's a new record use SIGN UP else EDIT PROFILE -->
				<h3> <%= (@student.new_record? ? "SIGN UP" : "EDIT PROFILE") %></h3>
				<div class="row">
				<%= form_for(@student, html: {class: "col s12"}) do |f| %>
					<div class="row">
				        <div class="input-field col s12">
							<%= f.text_field :name, placeholder: (@student.new_record? ? "Enter your name" : "Update your name"), autofocus:true %>
							<%= f.label :name %>
						</div>
					</div>
					<div class="row">
				        <div class="input-field col s12">
							<%= f.email_field :email, placeholder: (@student.new_record? ? "Enter your email address" : "Update your email address") %>
							<%= f.label :email, class: "active" %>
						</div>
					</div>
					<div class="row">
				        <div class="input-field col s12">
							<%= f.password_field :password, placeholder: (@student.new_record? ? "Enter your password" : "Update your password") %>
							<%= f.label :password, class: "active" %>
						</div>
					</div>
					<div class="row">
				        <div class="input-field col s12">
							<%= f.password_field :password, placeholder: "Re-enter your password" %>
							<%= f.label :password_confirmation, class: "active" %>
						</div>
					</div>
					<%= f.button (@student.new_record? ? '<i class="material-icons right">send</i>SIGN UP'.html_safe : '<i class="material-icons right">edit</i>EDIT'.html_safe), :disable_with => (@student.new_record? ? "Submitting..." : 'Editing...'), class: "btn-flat teal accent-4 waves-effect waves-light" %>
				<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

